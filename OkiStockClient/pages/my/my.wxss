@import "../../template/title-cell.wxss";
@import "../../template/marquee.wxss";

.user-avatar {
    width: 84rpx;
    height: 84rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.split_view {
    border-bottom: 1rpx solid #e4e4e4;
    border-top: 1rpx solid #e4e4e4;
    width: 100%;
    height: 10rpx;
    margin-top: 20rpx;
}

.assets_container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
}

.assets_item_container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: left;
}

.user_data_container {
    width: 250rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
}

.item_data_container {
    width: 250rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: white;
}

.tab_container {
    position: relative;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e4e4e4;
}

.tab_item_text {
    display: inline-block;
    width: 33.3%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}

.tab_item_sel_line_container {
    width: 33.3%;
    height: 5rpx;
    position: absolute;
    bottom: 0;
    background-color: C4-font;
}

.empty_container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.empty_img {
    width: 128rpx;
    height: 128rpx;
    margin-top: 150rpx;
}

.empty_img_2 {
    width: 150rpx;
    height: 128rpx;
    margin-top: 150rpx;
}

.empty_img_3 {
    width: 156rpx;
    height: 128rpx;
    margin-top: 150rpx;
}

.empty_tips {
    margin-top: 20rpx;
    font-style: italic;
}
