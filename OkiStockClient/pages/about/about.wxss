.question_container {
    width: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

.question_item_container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 30rpx;
}

.title {
    line-height: 60rpx;
}

.answer {
    line-height: 50rpx;
}

.advice_input {
    width: 88%;
    height: 150rpx;
    border: 1px solid rgb(87, 107, 149);
    margin: 30rpx;
    padding: 10rpx;
}

.advice_submit {
    width: 180rpx;
    height: 90rpx;
    float: right;
    margin-right: 40rpx;
    margin-bottom: 40rpx;
}
