.user-avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.tab_container {
    position: relative;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e4e4e4;
}

.tab_item_text {
    display: inline-block;
    width: 50%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}

.tab_item_sel_line_container {
    width: 50%;
    height: 5rpx;
    position: absolute;
    bottom: 0;
    background-color: C4-font;
}

.lisetview_data_container {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #e4e4e4;
}

.lisetview_item_left_container {
    width: 100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.lisetview_item_middle_container {
    width: 300rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}

.lisetview_item_right_container {
    width: 140rpx;
    height: 58rpx;
    display: flex;
    padding-left: 15rpx;
    padding-right: 10rpx;
    flex-direction: column;
    align-items: flex-end;
    text-align: center;
    justify-content: center;
    border-radius: 8rpx;
}
