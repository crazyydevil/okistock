.stock_container {
    position: relative;
}

.container_item {
    position: relative;
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e4e4e4;
}

.item_name {
    display: inline-flex;
    justify-content: center;
    flex-direction: column;
    height: 100%;
    position: absolute;
    left: 24rpx;
}

.item_price {
    position: absolute;
    display: inline-block;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.item_percent {
    width: 140rpx;
    height: 58rpx;
    border-radius: 8rpx;
    position: absolute;
    right: 24rpx;
    display: inline-block;
    text-align: center;
    top: 50%;
    transform: translate(0, -50%);
    line-height: 58rpx;
    padding-left: 5rpx;
    padding-right: 5rpx;
}
